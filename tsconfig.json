{
  "compilerOptions": {
    "outDir": "public/scripts",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "Node",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "src/**/*"
  ]
}
